{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug fastrue server",
            "cargo": {
                "args": ["build", "--bin=fastrue", "--package=fastrue", "--release", "--locked"],
                "filter": { "name": "fastrue", "kind": "bin" }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "internalConsoleOptions": "openOnSessionStart",
            "presentation": {
                "hidden": true,
                "group": "debug",
                "order": 1
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug fastrue frontend",
            "runtimeExecutable": "pnpm",
            "runtimeArgs": ["dev"],
            "skipFiles": ["<node_internals>/**"],
            "serverReadyAction": {
                "action": "debugWithChrome",
                "pattern": "started server on .+, url: (https?://.+)",
                "webRoot": "${workspaceFolder}",
                "uriFormat": "%s"
            },
            "console": "internalConsole",
            "internalConsoleOptions": "openOnSessionStart",
            "presentation": {
                "hidden": true,
                "group": "debug",
                "order": 2
            }
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome",
            "url": "http://localhost:9090/ui",
            "webRoot": "${workspaceFolder}",
            "cleanUp": "wholeBrowser",
            "runtimeArgs": [
                "--auto-open-devtools-for-tabs",
                "--start-maximized",
                "--bwsi",
                "--allow-insecure-localhost",
                "--disable-component-update",
                "--disable-crash-reporter",
                "--disable-extensions",
                "--disable-hang-monitor",
                "--suppress-message-center-popups"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "presentation": {
                "hidden": true,
                "group": "debug",
                "order": 3
            }
        }
    ],
    "compounds": [
        {
            "name": "Start development",
            "configurations": ["Debug fastrue server", "Debug fastrue frontend", "Launch Chrome"],
            "stopAll": true
        }
    ]
}
