{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": ["**/.env.*local"],
    "pipeline": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": [".next/**", "!.next/cache/**", "dist/**"]
        },
        "dev": {
            "persistent": true,
            "cache": false
        },
        "start": {
            "dependsOn": ["^build"],
            "cache": false
        },
        "test": {
            "cache": false
        },
        "lint": {
            "cache": false
        },
        "lint:fix": {
            "cache": false
        },
        "clean": {
            "cache": false
        },
        "release": {
            "cache": false
        },
        "standalone-server#dev": {
            "dependsOn": ["portal#build"]
        },
        "standalone-server#build": {
            "dependsOn": ["portal#build"]
        }
    }
}
