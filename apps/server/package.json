{
    "name": "standalone-server",
    "version": "0.0.0",
    "main": "app.js",
    "scripts": {
        "build": "rimraf dist && swc src -d dist",
        "build:watch": "swc src -w --out-dir dist",
        "dev": "concurrently --raw --hide 0 \"pnpm build:watch\" \"pnpm start:watch\"",
        "start": "NODE_ENV=production node dist/app.js",
        "start:watch": "node --watch-path=dist dist/app.js",
        "format": "prettier --write \"**/*.{js,ts}\"",
        "clean": "rimraf .turbo && rimraf node_modules && rimraf dist",
        "test": "vitest run",
        "test:ui": "vitest --ui",
        "test:unit": "vitest run --dir test/unit",
        "test:integration": "vitest run --dir test/integration"
    },
    "dependencies": {
        "@fastify/autoload": "^5.7.1",
        "@fastify/sensible": "^5.3.0",
        "@fastify/static": "^6.11.2",
        "@fastrue/driver-postgres": "workspace:^",
        "@fastrue/fastify": "workspace:^",
        "@mgcrea/fastify-request-logger": "^1.3.0",
        "@mgcrea/pino-pretty-compact": "^1.3.0",
        "dotenv": "^16.3.1",
        "fastify": "^4.23.2",
        "fastify-cli": "^5.8.0",
        "fastify-plugin": "^4.5.1",
        "pino": "^8.15.7",
        "postgres": "^3.3.5"
    },
    "devDependencies": {
        "@swc/cli": "^0.1.62",
        "@swc/core": "^1.3.92",
        "@types/node": "^20.8.3",
        "@vitest/coverage-c8": "^0.31.1",
        "@vitest/ui": "^0.34.6",
        "concurrently": "^8.2.1",
        "prettier": "^3.0.3",
        "typescript": "~5.1.6",
        "vitest": "^0.34.6"
    }
}
