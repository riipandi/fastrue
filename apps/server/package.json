{
    "name": "fastrue-server",
    "version": "1.0.0",
    "license": "MIT",
    "author": "Aris Ripandi <aris@duck.com>",
    "main": "app.js",
    "scripts": {
        "build": "rimraf dist && swc src -d dist",
        "deps": "npx --yes npm-check-updates -x typescript --deep --interactive",
        "dev": "concurrently \"pnpm watch-compile\" \"pnpm watch-dev\"",
        "watch-compile": "swc src -w --out-dir dist",
        "watch-dev": "nodemon --watch \"dist/**/*\" -e js ./dist/app.js",
        "start": "NODE_ENV=production node dist/app.js",
        "format": "prettier --write \"**/*.{js,ts}\"",
        "test": "jest --testPathIgnorePatterns \"/(routes|database)/\""
    },
    "dependencies": {
        "@fastify/autoload": "^5.7.1",
        "@fastify/sensible": "^5.3.0",
        "@mgcrea/fastify-request-logger": "^1.3.0",
        "@mgcrea/pino-pretty-compact": "^1.3.0",
        "dotenv": "^16.3.1",
        "fastify": "^4.23.2",
        "fastify-cli": "^5.8.0",
        "fastify-plugin": "^4.5.1",
        "postgres": "^3.3.5",
        "zennv": "^0.1.1",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@swc/cli": "^0.1.62",
        "@swc/core": "^1.3.92",
        "@swc/jest": "^0.2.29",
        "@types/node": "^20.8.3",
        "concurrently": "^8.2.1",
        "jest": "^29.7.0",
        "nodemon": "^3.0.1",
        "prettier": "^3.0.3",
        "rimraf": "^5.0.5",
        "typescript": "^4.6.3"
    },
    "nodemonConfig": {
        "verbose": true,
        "ignore": [
            "**/test/**",
            "**/docs/**"
        ],
        "delay": 2500
    }
}
