{
    "name": "standalone-server",
    "version": "0.0.0",
    "main": "app.js",
    "scripts": {
        "build": "rimraf dist && swc src -d dist",
        "build:watch": "swc src -w --out-dir dist",
        "dev": "concurrently --raw --hide 0 \"pnpm build:watch\" \"pnpm start:watch\"",
        "start": "NODE_ENV=production node dist/app.js",
        "start:watch": "node --watch-path=dist --watch-path=../../packages dist/app.js",
        "format": "prettier --write \"**/*.{js,ts}\"",
        "clean": "rimraf .turbo node_modules dist coverage",
        "test": "vitest run",
        "test:ui": "vitest --ui",
        "test:unit": "vitest run --dir test/unit",
        "test:integration": "vitest run --dir test/integration"
    },
    "dependencies": {
        "@fastify/autoload": "^5.8.0",
        "@fastify/sensible": "^5.5.0",
        "@fastify/static": "^6.12.0",
        "@fastify/swagger-ui": "^1.10.1",
        "@fastify/swagger": "^8.12.0",
        "@fastrue/fastify": "workspace:^",
        "@mgcrea/fastify-request-logger": "^1.4.0",
        "@mgcrea/pino-pretty-compact": "^1.3.0",
        "dotenv": "^16.3.1",
        "fastify-cli": "^5.9.0",
        "fastify-plugin": "^4.5.1",
        "fastify": "^4.24.3",
        "pino": "^8.16.1",
        "postgres": "^3.4.3"
    },
    "devDependencies": {
        "@swc/cli": "^0.1.62",
        "@swc/core": "^1.3.96",
        "@types/node": "^20.9.0",
        "@vitest/ui": "^0.34.6",
        "concurrently": "^8.2.2",
        "prettier": "^3.0.3",
        "typescript": "~5.1.6",
        "vitest": "^0.34.6"
    }
}
