{
    "name": "server",
    "version": "0.0.0",
    "main": "app.js",
    "scripts": {
        "build": "rimraf dist && swc src -d dist",
        "build:watch": "swc src -w --out-dir dist",
        "dev": "concurrently --raw --hide 0 \"pnpm build:watch\" \"pnpm start:watch\"",
        "start": "NODE_ENV=production node dist/app.js",
        "start:watch": "node --watch-path=dist dist/app.js",
        "format": "prettier --write \"**/*.{js,ts}\"",
        "test": "jest --testPathIgnorePatterns \"/(routes|database)/\""
    },
    "dependencies": {
        "@fastify/autoload": "^5.7.1",
        "@fastify/sensible": "^5.3.0",
        "@fastrue/fastify": "workspace:^",
        "@mgcrea/fastify-request-logger": "^1.3.0",
        "@mgcrea/pino-pretty-compact": "^1.3.0",
        "dotenv": "^16.3.1",
        "fastify-cli": "^5.8.0",
        "fastify-plugin": "^4.5.1",
        "fastify": "^4.23.2",
        "postgres": "^3.3.5"
    },
    "devDependencies": {
        "@swc/cli": "^0.1.62",
        "@swc/jest": "^0.2.29",
        "@types/node": "^20.8.3",
        "concurrently": "^8.2.1",
        "jest": "^29.7.0",
        "prettier": "^3.0.3",
        "rimraf": "^5.0.5",
        "typescript": "^4.6.3"
    }
}
